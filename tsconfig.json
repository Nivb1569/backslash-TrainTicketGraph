{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "commonjs",
    "target": "es2019",
    "lib": ["esnext"],
    "types": ["node", "jest"],
    "esModuleInterop": true,

    "sourceMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "jsx": "react-jsx",

    "skipLibCheck": true
  }
}
